{
  "name": "@jamsite/jamsite",
  "version": "0.0.18",
  "description": "Jamsite - JAMstack framework",
  "main": "./lib",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "lint": "standard --verbose *.js **/*.js | snazzy",
