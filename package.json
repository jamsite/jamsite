  },
  "keywords": [
    "jamstack"
  ],
  "author": "Aleksandr Tsertkov <tsertkov@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.3.1",
    "fs-router": "^0.5.0",
    "handlebars": "^4.7.2",
    "lodash.get": "^4.4.2",
    "marked": "^0.8.0",
    "micro": "^9.3.4",
    "mime-types": "^2.1.26",
    "path-to-regexp": "^6.1.0",
    "serve-handler": "^6.1.2",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "nyc": "^15.0.0",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ]
